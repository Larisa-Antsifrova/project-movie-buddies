<div class="row">
  <div class="col s12 m6">
    {{#if poster_path}}
    <img src="https://image.tmdb.org/t/p/w500{{ poster_path }}" alt="{{ title }}" class="responsive-img border-img"/>
    {{else}}
    <img src="https://cdn.pixabay.com/photo/2015/09/09/17/51/film-932154_960_720.jpg" alt="{{ title }}"
      class="responsive-img border-img" />
    {{/if}}
  </div>
  <div class="col s12 m6">
    {{#if title}}
    <h3 class="title-film center-align title-film__js">{{ title }}</h3>
    {{else}}
    <h3 class="title-film center-align title-film__js">{{ name }}</h3>
    {{/if}}
    <table>
      <tbody>
        <tr class="table-light-rows">
          <td class="detailscaption">Vote / Votes</td>
          <td id="detailspopularity" class="detailsinfo" class="vote__js"><span class="vote-box">
              {{vote_average}}</span> <span class="detailscaption">/</span> {{vote_count}}
          </td>
        </tr>
        <tr class="table-dark-rows">
          <td class="detailscaption">Release Date</td>
          {{#if release_date}}
          <td d="detailsvote" class="detailsinfo release-date__js">
            {{ release_date }}
          </td>
          {{else}}
          <td d="detailsvote" class="detailsinfo release-date__js">
            {{ first_air_date }}
            {{/if}}
        </tr>
        </tr>
        <tr class="table-light-rows">
          <td class="detailscaption">Original Title</td>
          {{#if original_title}}
          <td id="detailspopularity" class="detailsinfo original-title original-title__js">
            {{ original_title }}
          </td>
          {{else}}
          <td id="detailspopularity" class="detailsinfo original-title original-title__js">
            {{ original_name }}
            {{/if}}
        </tr>
        <tr class="table-dark-rows">
          <td class="detailscaption">Genre</td>
          <td id="detailsgenre" class="detailsinfo">{{genres_name}}</td>
        </tr>
      </tbody>
    </table>
    {{#if trailer_key}}
    <div class="trailer__box">
      <ul class="trailer">
        <li class="trailer__ref">
          <div class="video-container responsive-video">
            <iframe width="100%" height="100%" src="https://www.youtube.com//embed/{{ trailer_key }}" frameborder="0"
              allowfullscreen allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"></iframe>
          </div>
        </li>
      </ul>
    </div>
    {{else}}
    <div class="trailer__box">
      <ul class="trailer">
        <li class="trailer__ref">
        </li>
      </ul>
    </div>
    {{/if}}
  </div>
  <div class="col s12">
    <h3 class="title-about">ABOUT</h3>
    <p class="overview overview__js">{{ overview }}</p>
  </div>
</div>