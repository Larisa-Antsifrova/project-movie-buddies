<div id="modal-signup" class="modal">
    <div class="modal-content account-modal">
        <h4>Sign up</h4>
        <br />
        <div class="input-field center-align">
            <a class="github-signin__js github-login-link">
                <i class="fa fa-github fa-2x"></i>
                <span class="github-text">Sign in with GitHub</span></a>
            <span class="or-text-span">OR</span>

        </div>
        <form id="signup-form">
            <div class="input-field">
                <i class="material-icons prefix">edit</i>
                <input type="text" id="signup-name" required />
                <label for="signup-name">Enter your name <span class="required">*</span></label>
            </div>
            <div class="input-field">
                <p>
                    <label>
                        <input type="checkbox" class="filled-in signup-checkbox" id="checkbox__js" />
                        <span>I want to contact Buddies via Telegram</span>
                    </label>
                </p>
                <i class="material-icons prefix">question_answer</i>
                <input type="text" value="@" id="signup-telegram-name__js" disabled />
                <label for="signup-telegram-name"></label>

            </div>
            <div class="input-field">
                <i class="material-icons prefix">email</i>
                <input type="email" id="signup-email" required />
                <label for="signup-email">Email address <span class="required">*</span></label>
            </div>
            <div class="input-field">
                <i class="material-icons prefix">vpn_key</i>
                <input type="password" id="signup-password" required />
                <label for="signup-password">Choose password <span class="required">*</span></label>
            </div>
            <button class="btn z-depth-0 login-button">Sign up</button>
        </form>
    </div>
</div>

<div id="modal-login" class="modal">
